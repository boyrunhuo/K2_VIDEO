*{
    margin: 0;
    padding: 0;
}

body {
    min-width: 1200px;
    width: 100%;
    overflow: scroll;
    overflow-x:hidden;
}

/*播放页面头部*/
.header{
    border-bottom: solid 1px darkgray;
    height: 80px;
    background-color: white;
}
p#K{
    font-size: 80px;
    color: deepskyblue;
    position:absolute ;
    top:-15px;
    left: 25px;
}
p#TWO{
    font-size: 80px;
    color: red;
    position:absolute;
    left: 150px;
    top:-15px;
}
.fa-youtube-play{
    position: absolute;
    top: 10px;
    left: 80px;
}

#onlinePlay-Word{
    position:relative;
    left:260px;
    top:-40px;
    font-size:30px;
}
#userName{
    position:relative;
    left:920px;
    top:-40px;
    font-size:20px;
    color:#778899;
}
/*导航栏*/
.navbar{
    position:relative;
    top:27px;
    width:346px;
    left:650px;
}

.navbar ul li{
    padding:0;
    margin:0;
    position:relative;
    left:0;
}
.navbar-default .navbar-nav>.active>a, .navbar-default .navbar-nav>.active>a:focus, .navbar-default .navbar-nav>.active>a:hover {
    color: #555;
    background-color:#B0C4DE;
}

#exitBtn{
    position:relative;
    left:1220px;
    top:-73px;
}

.btn-default:hover{
    color: white;
    background:deepskyblue;
}
.btn{
    position:relative;
    margin-left:35px;
}


/*播放视频部分*/
.content-action{
    position:relative;
    top:20px;
    left:70px;
}
.videoName{
    font-size:20px;
}
.onlineVideo{
    position:relative;
    left:300px;
    top:30px;
    width:750px;
}
#downloadVideo{
    border:1px solid lightgrey;
    padding:8px 12px;
    border-radius:5px;
    margin-left:25px;
    color:#4F4F4F;
}
body a:hover{
    color: white;
    background-color:deepskyblue;
    text-decoration:none;
}